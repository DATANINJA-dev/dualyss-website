{
  "mcpServers": {
    "serena": {
      "type": "stdio",
      "command": "uvx",
      "args": ["--from", "git+https://github.com/oraios/serena", "serena", "start-mcp-server"],
      "comment": "REQUIRED: Semantic code understanding for /generate-epics, /refine, /audit"
    },
    "memory": {
      "type": "stdio",
      "command": "npx",
      "args": ["@anthropic/mcp-memory"],
      "comment": "REQUIRED: Persistent storage for audit findings and research cache"
    },
    "github": {
      "type": "stdio",
      "command": "npx",
      "args": ["@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_PERSONAL_ACCESS_TOKEN}"
      },
      "comment": "OPTIONAL: GitHub PR/issue integration"
    },
    "brave": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-brave-search"],
      "env": {
        "BRAVE_SEARCH_API_KEY": "${BRAVE_SEARCH_API_KEY}"
      },
      "comment": "OPTIONAL: Enhanced web search for audit research agents"
    }
  }
}
